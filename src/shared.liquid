  .progress-fill { background: linear-gradient(180deg, #3a3a3a 0%, #1a1a1a 100%); height: 100%; }
  .progress-value { position: absolute; right: 8px; top: 50%; transform: translateY(-50%); font-size: 12px; }
  .pct--0 { width: 0%; } .pct--5 { width: 5%; } .pct--10 { width: 10%; } .pct--15 { width: 15%; } .pct--20 { width: 20%; }
