{% comment %} Half horizontal layout (800x240) {% endcomment %}

<div class="view view--half-horizontal">
  <div class="layout layout--col gap--space-2">
    {% case panel_type %}
      {% when 'stat' %}
        <div class="flex flex--col flex--center flex--middle gap--space-2" style="height: 100%;">
          {% if title and title != '' %}
          <div class="label">{{ title }}</div>
          {% endif %}
          <div class="value value--xxl">{{ formatted_value | default: value }}</div>
        </div>

      {% when 'timeseries', 'barchart', 'graph' %}
        <div class="flex flex--col gap--space-1" style="height: 100%;">
          <div id="chart-hh" class="w--full" style="flex: 1; min-height: 120px;"></div>
        </div>
        <script src="https://usetrmnl.com/js/highcharts/12.3.0/highcharts.js"></script>
        <script>
          Highcharts.chart('chart-hh', {
            chart: { type: 'line', backgroundColor: 'transparent', height: 140 },
            title: { text: null },
            credits: { enabled: false },
            legend: { enabled: false },
            plotOptions: {
              series: {
                animation: false,
                color: '#000000',
                lineWidth: 2,
                marker: { enabled: false }
              }
            },
            xAxis: {
              categories: [{% for point in chart_data %}'{{ point.label }}'{% unless forloop.last %},{% endunless %}{% endfor %}],
              labels: { enabled: false },
              lineColor: '#000000'
            },
            yAxis: {
              title: { text: null },
              labels: { style: { color: '#000000', fontSize: '10px' } },
              gridLineColor: '#cccccc'
            },
            series: [{
              data: [{% for point in chart_data %}{{ point.value }}{% unless forloop.last %},{% endunless %}{% endfor %}]
            }]
          });
        </script>

      {% when 'gauge' %}
        {% assign pct = percentage | default: 0 %}
        {% assign arc_length = 188.4 %}
        {% assign filled = pct | times: arc_length | divided_by: 100 %}
        <div class="flex flex--col flex--center flex--middle" style="height: 100%;">
          <svg width="220" height="130" viewBox="0 0 220 130">
            <path d="M 20 110 A 90 90 0 0 1 200 110" fill="none" stroke="#e0e0e0" stroke-width="16" stroke-linecap="round"/>
            <path d="M 20 110 A 90 90 0 0 1 200 110" fill="none" stroke="#1a1a1a" stroke-width="16" stroke-linecap="round"
                  stroke-dasharray="{{ filled }} {{ arc_length }}" />
            <text x="20" y="128" text-anchor="middle" font-size="11" fill="#666">{{ min | default: 0 }}</text>
            <text x="200" y="128" text-anchor="middle" font-size="11" fill="#666">{{ max | default: 100 }}</text>
            <text x="110" y="95" text-anchor="middle" font-size="32" font-weight="bold" fill="#1a1a1a">{{ formatted_value | default: value }}</text>
            {% if title and title != '' %}
            <text x="110" y="118" text-anchor="middle" font-size="12" fill="#666">{{ title }}</text>
            {% endif %}
          </svg>
        </div>

      {% when 'bargauge' %}
        <div class="flex flex--col gap--space-2" style="height: 100%;">
          {% if title and title != '' %}
          <div class="label">{{ title }}</div>
          {% endif %}
          {% for bar in bars limit: 3 %}
          <div class="progress" style="--progress: {{ bar.percentage | default: 0 }}%;">
            <span class="value">{{ bar.formatted_value }}</span>
          </div>
          {% endfor %}
        </div>

      {% when 'table' %}
        <style>
          .data-table-hh { width: 100%; border-collapse: collapse; font-size: 13px; }
          .data-table-hh th, .data-table-hh td { padding: 4px 12px; text-align: left; border-bottom: 1px solid #ddd; }
          .data-table-hh th { font-weight: bold; border-bottom: 2px solid #1a1a1a; }
          .data-table-hh tr:last-child td { border-bottom: none; }
        </style>
        <div class="flex flex--col gap--space-1" style="height: 100%; overflow: hidden;">
          {% if title and title != '' %}
          <div class="label" style="text-align: center;">{{ title }}</div>
          {% endif %}
          <table class="data-table-hh">
            <thead>
              <tr>
                {% for col in columns %}<th>{{ col }}</th>{% endfor %}
              </tr>
            </thead>
            <tbody>
              {% for row in rows limit: 4 %}
              <tr>
                {% for cell in row %}<td>{{ cell }}</td>{% endfor %}
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

      {% when 'polystat' %}
        <style>
          .honeycomb-hh { display: flex; justify-content: center; align-items: center; height: 100%; }
          .hex-row-hh { display: flex; justify-content: center; }
          .hexagon-hh {
            width: 80px; height: 92px;
            clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            background: linear-gradient(180deg, #3a3a3a 0%, #1a1a1a 100%);
            margin: 0 2px;
          }
          .hexagon-hh.status-ok { background: linear-gradient(180deg, #3a3a3a 0%, #1a1a1a 100%); }
          .hexagon-hh.status-warning { background: linear-gradient(180deg, #6a6a6a 0%, #4a4a4a 100%); }
          .hexagon-hh.status-critical { background: #1a1a1a; position: relative; }
          .hexagon-hh.status-critical::before {
            content: ''; position: absolute; top: 3px; right: 3px; bottom: 3px; left: 3px;
            background: #f5f5f5; clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
          }
          .hexagon-hh.status-critical .hex-label-hh { color: #1a1a1a; position: relative; z-index: 1; }
          .hex-label-hh { font-size: 10px; color: #ffffff; text-align: center; padding: 0 4px; line-height: 1.2; }
        </style>
        <div class="honeycomb-hh">
          <div class="hex-row-hh">
            {% for stat in stats limit: 6 %}
            <div class="hexagon-hh status-{{ stat.status | default: 'ok' }}">
              <span class="hex-label-hh">{{ stat.name }}</span>
            </div>
            {% endfor %}
          </div>
        </div>

      {% when 'error' %}
        <div class="flex flex--col flex--center flex--middle" style="height: 100%;">
          <div class="label">Error</div>
          <div class="description">{{ error_message | default: 'Failed to load data' }}</div>
        </div>

      {% else %}
        <div class="flex flex--col flex--center flex--middle gap--space-2" style="height: 100%;">
          <div class="value value--xxl">{{ formatted_value | default: value | default: '--' }}</div>
        </div>
    {% endcase %}
  </div>

  <div class="title_bar title_bar--compact">
    <img class="image" src="https://grafana.com/static/assets/img/fav32.png" />
    <span class="title">{{ title | default: 'Grafana Panel' }}</span>
    <span class="instance">{{ timestamp }}</span>
  </div>
</div>
