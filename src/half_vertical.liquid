{% comment %} Half vertical layout (400x480) {% endcomment %}

<div class="layout layout--col gap--space-2">
  {% case panel_type %}
    {% when 'stat' %}
      <div class="flex flex--col flex--center flex--middle h--full">
        <div class="value value--xxl">{{ formatted_value | default: value }}</div>
      </div>

    {% when 'timeseries', 'barchart', 'graph' %}
      {% assign chart_id = 'chart-hv' | append_random %}
      <div class="flex flex--col gap--space-1 h--full">
        <div id="{{ chart_id }}" class="w--full flex--grow"></div>
      </div>
      <script src="https://usetrmnl.com/js/highcharts/12.3.0/highcharts.js"></script>
      <script>
        Highcharts.chart('{{ chart_id }}', {
          chart: { type: 'line', backgroundColor: 'transparent' },
          title: { text: null },
          credits: { enabled: false },
          legend: { enabled: false },
          plotOptions: {
            series: {
              animation: false,
              color: '#000000',
              lineWidth: 2,
              marker: { enabled: false }
            }
          },
          xAxis: {
            categories: [{% for point in chart_data %}'{{ point.label }}'{% unless forloop.last %},{% endunless %}{% endfor %}],
            labels: { enabled: false },
            lineColor: '#000000'
          },
          yAxis: {
            title: { text: null },
            gridLineColor: '#000000',
            gridLineWidth: 0.5
          },
          series: [{
            data: [{% for point in chart_data %}{{ point.value }}{% unless forloop.last %},{% endunless %}{% endfor %}]
          }]
        });
      </script>

    {% when 'gauge' %}
      {% assign pct = percentage | default: 0 %}
      {% assign arc_length = 377 %}
      {% assign filled = pct | times: arc_length | divided_by: 100 %}
      <div class="flex flex--col flex--center flex--middle h--full">
        <svg width="280" height="170" viewBox="0 0 280 170">
          <path d="M 20 140 A 120 120 0 0 1 260 140" fill="none" stroke="#ffffff" stroke-width="18" stroke-linecap="round"/>
          <path d="M 20 140 A 120 120 0 0 1 260 140" fill="none" stroke="#000000" stroke-width="18" stroke-linecap="round"
                stroke-dasharray="{{ filled }} {{ arc_length }}" />
          <text x="20" y="165" text-anchor="middle" font-size="12" fill="#000000">{{ min | default: 0 }}</text>
          <text x="260" y="165" text-anchor="middle" font-size="12" fill="#000000">{{ max | default: 100 }}</text>
          <text x="140" y="120" text-anchor="middle" font-size="42" font-weight="bold" fill="#000000">{{ formatted_value | default: value }}</text>
          {% if title and title != '' %}
          <text x="140" y="150" text-anchor="middle" font-size="14" fill="#000000">{{ title }}</text>
          {% endif %}
        </svg>
      </div>

    {% when 'bargauge' %}
      <div class="flex flex--col h--full w--full px--3">
        {% if title and title != '' %}
        <div class="label text--center mb--2">{{ title }}</div>
        {% endif %}
        <div class="flex flex--col gap--space-4 flex--grow justify--center">
          {% for bar in bars limit: 6 %}
          <div class="flex flex--col gap--space-2 w--full">
            <div class="flex justify--between">
              <span class="label">{{ bar.name }}</span>
              <span class="label">{{ bar.formatted_value }}</span>
            </div>
            {% assign pct_raw = bar.percentage | default: 0 | plus: 2 | divided_by: 5 | times: 5 %}
            {% if pct_raw > 100 %}{% assign pct_rounded = 100 %}{% else %}{% assign pct_rounded = pct_raw %}{% endif %}
            <div class="progress-bar progress-bar--large w--full bg--gray-30 border--h-1">
              <div class="progress-fill bg--black pct--{{ pct_rounded }}"></div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

    {% when 'table' %}
      <div class="flex flex--col h--full overflow--hidden">
        <table class="table table--compact w--full">
          <thead>
            <tr>
              {% for col in columns limit: 3 %}<th class="px--1 py--0 text--left border--h-1">{{ col }}</th>{% endfor %}
            </tr>
          </thead>
          <tbody>
            {% for row in rows limit: 12 %}
            <tr>
              {% for cell in row limit: 3 %}<td class="px--1 py--0 text--left border--h-7">{{ cell }}</td>{% endfor %}
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

    {% when 'polystat' %}
      {% assign stat_count = stats | size %}
      {% if stat_count <= 8 %}
        {% assign size_class = 'hex--hv-lg' %}{% assign row_size = 2 %}
      {% elsif stat_count <= 15 %}
        {% assign size_class = 'hex--hv-md' %}{% assign row_size = 3 %}
      {% else %}
        {% assign size_class = 'hex--hv-sm' %}{% assign row_size = 4 %}
      {% endif %}
      <div class="honeycomb {{ size_class }}">
        {% for stat in stats %}
          {% assign mod = forloop.index0 | modulo: row_size %}
          {% if mod == 0 %}<div class="hex-row">{% endif %}
          {% assign status = stat.status | default: 'ok' %}
          {% if status == 'ok' %}
          <div class="hexagon flex flex--col flex--center flex--middle status-ok bg--black">
            <span class="hex-label text--center text--white">{{ stat.name }}</span>
          </div>
          {% elsif status == 'warning' %}
          <div class="hexagon flex flex--col flex--center flex--middle status-warning bg--gray-30">
            <span class="hex-label text--center text--white text-stroke text-stroke--black">{{ stat.name }}</span>
          </div>
          {% else %}
          <div class="hexagon flex flex--col flex--center flex--middle status-critical bg--black">
            <span class="hex-label text--center text--black bg--white">{{ stat.name }}</span>
          </div>
          {% endif %}
          {% if forloop.last %}
            {% assign remaining = row_size | minus: mod | minus: 1 %}
            {% for i in (1..remaining) %}<div class="hexagon placeholder"></div>{% endfor %}
          </div>
          {% else %}
            {% assign next_mod = forloop.index | modulo: row_size %}
            {% if next_mod == 0 %}</div>{% endif %}
          {% endif %}
        {% endfor %}
      </div>

    {% when 'error' %}
      <div class="flex flex--col flex--center flex--middle h--full">
        <div class="label">Error</div>
        <div class="description">{{ error_message | default: 'Failed to load data' }}</div>
      </div>

    {% else %}
      <div class="flex flex--col flex--center flex--middle gap--space-2 h--full">
        <div class="value value--xxl">{{ formatted_value | default: value | default: '--' }}</div>
      </div>
  {% endcase %}
</div>

<div class="title_bar title_bar--compact">
  <img class="image" src="https://grafana.com/static/assets/img/fav32.png" />
  <span class="title">{{ title | default: 'Grafana Panel' }}</span>
  <span class="instance">{{ timestamp }}</span>
</div>
