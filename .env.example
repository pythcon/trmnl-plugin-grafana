# Grafana Connection
GRAFANA_URL=https://grafana.example.com
GRAFANA_API_KEY=glsa_xxxxxxxxxxxxxxxxxxxx

# Panel Configuration (one panel per instance)
DASHBOARD_UID=abc123
PANEL_ID=1
TIME_FROM=now-1h
TIME_TO=now

# ============================================
# WEBHOOK MODE (push to TRMNL)
# ============================================
# The Data Service pushes data to TRMNL on a schedule.
# Use this if you're behind a firewall or can't expose a public endpoint.

# TRMNL Plugin Webhook URL (from your plugin settings)
TRMNL_WEBHOOK_URL=https://usetrmnl.com/api/custom_plugins/YOUR-PLUGIN-UUID

# Update interval in seconds (default: 300 = 5 minutes)
INTERVAL=300

# ============================================
# API MODE (TRMNL polls your endpoint)
# ============================================
# TRMNL fetches data from your hosted API endpoint.
# Use this if you have a public endpoint or use a service like Railway, Render, etc.

# Port for the API server (default: 8080)
API_PORT=8080
