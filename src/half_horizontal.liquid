{% comment %} Half horizontal layout (800x240) {% endcomment %}

<div class="layout layout--col gap--space-2">
  {% case panel_type %}
    {% when 'stat' %}
      <div class="flex flex--col flex--center flex--middle gap--space-2 h--full">
        {% if title and title != '' %}
        <div class="label">{{ title }}</div>
        {% endif %}
        <div class="value value--xxl">{{ formatted_value | default: value }}</div>
      </div>

    {% when 'timeseries', 'barchart', 'graph' %}
      {% assign chart_id = 'chart-hh' | append_random %}
      <div class="flex flex--col gap--space-1 h--full">
        <div id="{{ chart_id }}" class="w--full flex--grow"></div>
      </div>
      <script src="https://usetrmnl.com/js/highcharts/12.3.0/highcharts.js"></script>
      <script>
        Highcharts.chart('{{ chart_id }}', {
          chart: { type: 'line', backgroundColor: 'transparent', height: 140 },
          title: { text: null },
          credits: { enabled: false },
          legend: { enabled: false },
          plotOptions: {
            series: {
              animation: false,
              color: '#000000',
              lineWidth: 2,
              marker: { enabled: false }
            }
          },
          xAxis: {
            categories: [{% for point in chart_data %}'{{ point.label }}'{% unless forloop.last %},{% endunless %}{% endfor %}],
            labels: { enabled: false },
            lineColor: '#000000'
          },
          yAxis: {
            title: { text: null },
            gridLineColor: '#cccccc'
          },
          series: [{
            data: [{% for point in chart_data %}{{ point.value }}{% unless forloop.last %},{% endunless %}{% endfor %}]
          }]
        });
      </script>

    {% when 'gauge' %}
      {% assign pct = percentage | default: 0 %}
      {% assign arc_length = 283 %}
      {% assign filled = pct | times: arc_length | divided_by: 100 %}
      <div class="flex flex--col flex--center flex--middle h--full">
        <svg width="220" height="130" viewBox="0 0 220 130">
          <path d="M 20 110 A 90 90 0 0 1 200 110" fill="none" stroke="#e0e0e0" stroke-width="16" stroke-linecap="round"/>
          <path d="M 20 110 A 90 90 0 0 1 200 110" fill="none" stroke="#1a1a1a" stroke-width="16" stroke-linecap="round"
                stroke-dasharray="{{ filled }} {{ arc_length }}" />
          <text x="20" y="128" text-anchor="middle" font-size="11" fill="#666">{{ min | default: 0 }}</text>
          <text x="200" y="128" text-anchor="middle" font-size="11" fill="#666">{{ max | default: 100 }}</text>
          <text x="110" y="95" text-anchor="middle" font-size="32" font-weight="bold" fill="#1a1a1a">{{ formatted_value | default: value }}</text>
          {% if title and title != '' %}
          <text x="110" y="118" text-anchor="middle" font-size="12" fill="#666">{{ title }}</text>
          {% endif %}
        </svg>
      </div>

    {% when 'bargauge' %}
      <div class="flex flex--col gap--space-2 h--full">
        {% if title and title != '' %}
        <div class="label">{{ title }}</div>
        {% endif %}
        {% for bar in bars limit: 3 %}
        {% assign pct_raw = bar.percentage | default: 0 | plus: 2 | divided_by: 5 | times: 5 %}
        {% if pct_raw > 100 %}{% assign pct_rounded = 100 %}{% else %}{% assign pct_rounded = pct_raw %}{% endif %}
        <div class="progress-bar">
          <div class="progress-fill pct--{{ pct_rounded }}"></div>
          <span class="progress-value">{{ bar.formatted_value }}</span>
        </div>
        {% endfor %}
      </div>

    {% when 'table' %}
      <div class="flex flex--col h--full overflow--hidden">
        <table class="table table--compact w--full">
          <thead>
            <tr>
              {% for col in columns %}<th class="px--1 py--0 text--left border--h-1">{{ col }}</th>{% endfor %}
            </tr>
          </thead>
          <tbody>
            {% for row in rows limit: 6 %}
            <tr>
              {% for cell in row %}<td class="px--1 py--0 text--left border--h-7">{{ cell }}</td>{% endfor %}
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

    {% when 'polystat' %}
      {% assign stat_count = stats | size %}
      {% if stat_count <= 6 %}
        {% assign size_class = 'hex--hh-lg' %}{% assign row_size = 6 %}
      {% elsif stat_count <= 14 %}
        {% assign size_class = 'hex--hh-md' %}{% assign row_size = 7 %}
      {% else %}
        {% assign size_class = 'hex--hh-sm' %}{% assign row_size = 8 %}
      {% endif %}
      <div class="honeycomb {{ size_class }}">
        {% for stat in stats %}
          {% assign mod = forloop.index0 | modulo: row_size %}
          {% if mod == 0 %}<div class="hex-row">{% endif %}
          <div class="hexagon flex flex--col flex--center flex--middle status-{{ stat.status | default: 'ok' }}">
            <span class="hex-label text--center text--white">{{ stat.name }}</span>
          </div>
          {% if forloop.last %}
            {% assign remaining = row_size | minus: mod | minus: 1 %}
            {% for i in (1..remaining) %}<div class="hexagon placeholder"></div>{% endfor %}
          </div>
          {% else %}
            {% assign next_mod = forloop.index | modulo: row_size %}
            {% if next_mod == 0 %}</div>{% endif %}
          {% endif %}
        {% endfor %}
      </div>

    {% when 'error' %}
      <div class="flex flex--col flex--center flex--middle h--full">
        <div class="label">Error</div>
        <div class="description">{{ error_message | default: 'Failed to load data' }}</div>
      </div>

    {% else %}
      <div class="flex flex--col flex--center flex--middle gap--space-2 h--full">
        <div class="value value--xxl">{{ formatted_value | default: value | default: '--' }}</div>
      </div>
  {% endcase %}
</div>

<div class="title_bar title_bar--compact">
  <img class="image" src="https://grafana.com/static/assets/img/fav32.png" />
  <span class="title">{{ title | default: 'Grafana Panel' }}</span>
  <span class="instance">{{ timestamp }}</span>
</div>
